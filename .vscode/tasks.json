{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/usr/bin/dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Ws2812LedController.Console/Ws2812LedController.Console.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "type": "shell",
            //"dependsOn": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "${workspaceFolder}/publish.sh",
            "problemMatcher": []
        }
    ]
}